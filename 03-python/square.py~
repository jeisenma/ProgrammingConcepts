# import the turtle module (from the TK library) -- discuss alternatives
from turtle import *

def square(x,y,s):
	"""Draws a square with sides of length s"""
	up()
	goto(x,y)
	down()
	forward(s)
	right(90)
	forward(s)
	right(90)
	forward(s)
	right(90)
	forward(s)
	right(90)
	
# set up the drawing window
setup()

# so we don't have to wait forever"""
speed("fastest")

# draw the square
square(100)

# when to stop window: on mouse click
exitonclick()
